{
    "name": "Datenanfragen.de",
    "version": "1.0.0",
    "private": true,
    "description": "The Datenanfragen.de website. We want to help you exercise your rights under the GDPR.",
    "keywords": [
        "privacy",
        "gdpr",
        "eu-gdpr",
        "hugo",
        "pdf-generation",
        "preact"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datenanfragen/website.git"
    },
    "author": "The Datenanfragen.de project",
    "contributors": [
        {
            "name": "Benjamin Altpeter",
            "email": "hi@bn.al",
            "url": "https://benjamin-altpeter.de"
        },
        {
            "name": "Lorenz Sieben",
            "email": "me@lorenz-sieben.com",
            "url": "https://lorenz-sieben.com"
        }
    ],
    "license": "MIT",
    "scripts": {
        "build": "BABEL_ENV=production; webpack --mode=production --config webpack.prod.js",
        "dev": "webpack --watch --mode=development --config webpack.dev.js",
        "bs-local": "node -e \"(new (require('browserstack-local')).Local()).start({key: process.env.BROWSERSTACK_ACCESS_KEY, force: 'true', localIdentifier: require('os').hostname()}, ()=>{})\"",
        "test": "yarn bs-local && test/runner.js",
        "lint": "yarn eslint src && yarn stylelint src/styles",
        "fix": "yarn eslint src --fix && yarn stylelint src/styles --fix"
    },
    "bugs": {
        "url": "https://github.com/datenanfragen/website/issues"
    },
    "homepage": "https://www.datenanfragen.de",
    "dependencies": {
        "autocomplete.js": "^0.36.0",
        "brutusin-json-forms": "https://github.com/brutusin/json-forms",
        "js-cookie": "^2.2.0",
        "localforage": "^1.7.1",
        "preact": "^8.2.1",
        "preact-compat": "^3.18.0",
        "preact-i18n": "^1.2.0",
        "preact-portal": "^1.1.3",
        "react-joyride": "^1.11.4",
        "react-scrollspy": "^3.3.5",
        "typesense": "^0.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-transform-block-scoping": "^7.3.4",
        "@babel/plugin-transform-react-jsx": "^7.3.0",
        "@babel/preset-env": "^7.3.4",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "babel-minify-webpack-plugin": "^0.3.1",
        "browserstack-local": "^1.3.4",
        "css-loader": "^2.1.0",
        "eslint": "^5.15.0",
        "eslint-import-resolver-webpack": "^0.11.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-html": "^5.0.3",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-optimize-regex": "^1.1.6",
        "eslint-plugin-preact-i18n": "^1.0.1",
        "eslint-plugin-react": "^7.12.4",
        "husky": "^1.3.1",
        "iconfont-webpack-plugin": "^3.1.0",
        "imagemin-lint-staged": "^0.4.0",
        "lint-staged": ">=8",
        "mini-css-extract-plugin": "^0.5.0",
        "nightwatch": "^1.0.19",
        "node-sass": "^4.11.0",
        "optimize-css-assets-webpack-plugin": "^5.0.0",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.16.4",
        "sass-loader": "^7.0.1",
        "stylelint": "^9.10.1",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.5.4",
        "stylelint-use-nesting": "^1.2.1",
        "svg-pathdata": "^5.0.2",
        "svg-url-loader": "^2.3.2",
        "svgicons2svgfont": "^9.0.3",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-merge": "^4.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,css,scss,json}": [
                "prettier --write",
                "git add"
            ],
            "*.{js,html}": [
                "eslint"
            ],
            "*.{css,scss}": "stylelint",
            "*.{png,jpeg,jpg,gif,svg,PNG,JPEG,JPG,GIF,SVG}": [
                "imagemin-lint-staged",
                "git add"
            ]
        }
    }
}
